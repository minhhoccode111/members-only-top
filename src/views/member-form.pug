extends layout

block content
  h2 Hello, #{user.fullname}. Please enter membership passcode to upgrade.
  h2 Congrats, you are the 1000000th user. Upgrade to member for free with asdasdasd
  div(class="")
    form(method="post")
      div(class="")
        label(for="member-passcode" class="block") Member Passcode
        input(id="member-passcode" name="member-passcode" type="password" placeholder="Super secret passcode" required)

      div(class="flex gap-2 items-center justify-between")
        button(type="submit" class="text-white bg-green-500 px-4 py-2 rounded-md") Upgrade
        p 
          a(href="/" class="text-white bg-red-500 px-4 py-2 rounded-md") Cancel

  if wrongPasscode
    p(class="")
      strong Your member passcode is wrong