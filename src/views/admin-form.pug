extends layout

block content
  h2 Hello, #{user.fullname}. Please enter admin passcode to upgrade.
  div(class="")
    form(method="post")
      div(class="")
        label(for="admin-passcode" class="block") Admin Passcode
        input(id="admin-passcode" name="admin-passcode" type="password" placeholder="Super secret passcode")

      div(class="flex gap-2 items-center justify-between")
        button(type="submit" class="text-white bg-green-500 px-4 py-2 rounded-md") Upgrade
        p 
          a(href="/" class="text-white bg-red-500 px-4 py-2 rounded-md") Cancel

  if wrongPasscode
    p(class="")
      strong Your admin passcode is wrong
